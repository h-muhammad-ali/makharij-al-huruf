<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Alphabet">

    <Button
        android:id="@+id/tha"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:text="ث"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/ta"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ta"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:text="ت"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/ba"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ba"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:text="ب"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/alif"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/alif"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:text="ا"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/daal"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="د"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/kha"
        app:layout_constraintTop_toBottomOf="@+id/tha" />

    <Button
        android:id="@+id/kha"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="خ"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/ha"
        app:layout_constraintTop_toBottomOf="@+id/ta" />

    <Button
        android:id="@+id/ha"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="ح"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/jeem"
        app:layout_constraintTop_toBottomOf="@+id/ba" />

    <Button
        android:id="@+id/jeem"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="ج"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alif" />

    <Button
        android:id="@+id/sin"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="س"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/za"
        app:layout_constraintTop_toBottomOf="@+id/daal" />

    <Button
        android:id="@+id/za"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="ز"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/ra"
        app:layout_constraintTop_toBottomOf="@+id/kha" />

    <Button
        android:id="@+id/ra"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="ر"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/zaal"
        app:layout_constraintTop_toBottomOf="@+id/ha" />

    <Button
        android:id="@+id/zaal"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="ذ"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jeem" />

    <Button
        android:id="@+id/taa"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="ط"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/zad"
        app:layout_constraintTop_toBottomOf="@+id/sin" />

    <Button
        android:id="@+id/zad"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="ض"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/sad"
        app:layout_constraintTop_toBottomOf="@+id/za" />

    <Button
        android:id="@+id/sad"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="ص"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/shin"
        app:layout_constraintTop_toBottomOf="@+id/ra" />

    <Button
        android:id="@+id/shin"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="ش"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zaal" />

    <Button
        android:id="@+id/fa"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="ف"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/gayn"
        app:layout_constraintTop_toBottomOf="@+id/taa" />

    <Button
        android:id="@+id/gayn"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="غ"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/ayn"
        app:layout_constraintTop_toBottomOf="@+id/zad" />

    <Button
        android:id="@+id/ayn"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="ع"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/zaa"
        app:layout_constraintTop_toBottomOf="@+id/sad" />

    <Button
        android:id="@+id/zaa"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="ظ"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shin" />

    <Button
        android:id="@+id/meem"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="م"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/lam"
        app:layout_constraintTop_toBottomOf="@+id/fa" />

    <Button
        android:id="@+id/lam"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="ل"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/kaf"
        app:layout_constraintTop_toBottomOf="@+id/gayn" />

    <Button
        android:id="@+id/kaf"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="ك"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/qaf"
        app:layout_constraintTop_toBottomOf="@+id/ayn" />

    <Button
        android:id="@+id/qaf"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="ق"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zaa" />

    <Button
        android:id="@+id/hamza"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="ء"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/haa"
        app:layout_constraintTop_toBottomOf="@+id/meem" />

    <Button
        android:id="@+id/haa"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="ه"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/wow"
        app:layout_constraintTop_toBottomOf="@+id/lam" />

    <Button
        android:id="@+id/wow"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="و"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/noon"
        app:layout_constraintTop_toBottomOf="@+id/kaf" />

    <Button
        android:id="@+id/noon"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="ن"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qaf" />

    <Button
        android:id="@+id/ya"
        android:layout_width="104dp"
        android:layout_height="54dp"
        android:layout_marginBottom="19dp"
        android:text="ي"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>